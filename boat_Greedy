from collections import deque

def solution(people, limit):
    people = deque(people)
    people = sorted(people)
    cnt = 0
    while people :
        boat = 0
        heavy = people.pop(0)
        boat += heavy
        idx=len(people)-1
        
        while people :
            
            if idx == -1 : break
                
            another = people[idx]
            
            if boat + another <= limit :
                boat+=another
                people.pop(idx)
                break
            else : 
                idx-=1
                
        if boat > 0 :
            cnt+=1
    
    return cnt
