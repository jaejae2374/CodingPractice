from collections import deque

def solution(people, limit):
    people = deque(people)
    people = sorted(people)
    cnt = 0
    idx=len(people)-1
    start = 0
    while people :
        if idx == start : 
            cnt+=1
            break
        elif idx < start : 
            break
        boat = 0
        light = people[start]
        boat += light
        if boat + people[idx] <= limit :
            start += 1 
            idx-=1
            cnt+=1
        else : 
            idx-=1
            cnt+=1
            
    return cnt
