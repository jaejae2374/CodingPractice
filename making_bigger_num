from collections import deque
import heapq
def solution(number, k):
    k = len(number)-k
    number = list(number)
    number_ = deque(number)
    answer=""
    if k != 1 :
        max_num = max(number[:-k+1])
        idx = number_.index(max_num, 0)
        answer = answer+max_num
        for i in range(1, k-1) :
            max_num = max(number[idx+1:-k+1+i])
            idx = number_.index(max_num, idx+1)
            answer = answer+max_num
        max_num = max(number[idx+1:])
        idx = number_.index(max_num, idx+1)
        answer = answer+max_num
        
    else : return max(number_)   
    
    return answer
