def solution(n, times):
    
    min_time = 1
    max_time = max(times)*n
    
    while min_time < max_time :
        mid_time = (min_time + max_time)//2
        
        total = 0
        for t in times :
            total += mid_time//t
            
            if total >= n : break
        if total >= n :
            max_time = mid_time
        else : 
            min_time = mid_time + 1
    
    return min_time
