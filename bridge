def solution(bridge_length, weight, truck_weights):
    
    time = 0
    bridge = [0] * bridge_length
    while truck_weights : 
        time += 1
        bridge.insert(0, 0)
        del bridge[-1]
        if sum(bridge)+truck_weights[0] <= weight :
            bridge[0] = truck_weights[0]
            del truck_weights[0]
        else : pass
    
    time += bridge_length
            
    return time
        
