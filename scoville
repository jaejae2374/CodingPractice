#1
def solution(scoville, K):
    
    scoville.sort()
    cnt = 0
    
    while True :
        try : 
            if scoville[0] < K :
                scoville[0] = scoville[0] + (scoville[1]*2)
                del scoville[1]
                cnt+=1
                isContinued = False
                scoville.sort()
            else :
                if isContinued : break
                isContinued = True
                
                
        except :
            return -1
        
    return cnt
